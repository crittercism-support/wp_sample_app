<Window x:Class="DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="575.373" Width="525">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Content="Leave Breadcrumb" HorizontalAlignment="Center" VerticalAlignment="Center" Click="leaveBreadcrumbClick"/>
        <Button Grid.Row="1" Grid.Column="0"  Content="Handled Exception" HorizontalAlignment="Center" VerticalAlignment="Center" Click="handledExceptionClick"/>
        <Button Grid.Row="2" Grid.Column="0" Content="Simulate Crash" HorizontalAlignment="Center" VerticalAlignment="Center" Click="testCrashClick"/>
        <Button Grid.Row="3" Grid.Column="0" Content="Test Multithread" HorizontalAlignment="Center" VerticalAlignment="Center" Click="testMultithreadClick"/>
    </Grid>
</Window>
